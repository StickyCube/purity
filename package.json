{
  "name": "purity",
  "version": "0.0.0-development",
  "description": "",
  "main": "lib/index.js",
  "keywords": [
    "validation",
    "json",
    "data",
    "cleanse",
    "quality",
    "schema"
  ],
  "scripts": {
    "start": "yarn test -- -w",
    "precommit": "yarn test",
    "commit": "git-cz",
    "test": "ava",
    "test:coverage": "cross-env NODE_ENV=testing nyc yarn test",
    "test:report": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "prebuild": "rimraf lib",
    "build": "babel --out-dir lib src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Will Knowles",
  "email": "will.jk01@gmail.com",
  "url": "https://github.com/StickyCube/purity",
  "license": "MIT",
  "devDependencies": {
    "ava": "0.18.x",
    "babel-core": "6.24.x",
    "babel-eslint": "7.2.x",
    "babel-plugin-istanbul": "4.1.x",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "6.24.x",
    "codecov": "^2.1.0",
    "commitizen": "2.9.x",
    "condition-circle": "1.5.x",
    "cross-env": "3.2.x",
    "cz-conventional-changelog": "2.0.x",
    "nyc": "10.2.x",
    "rimraf": "2.6.x",
    "semantic-release": "^6.3.2",
    "semistandard": "10.0.x"
  },
  "dependencies": {
    "custom-error": "0.2.1",
    "lodash.isempty": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StickyCube/purity.git"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "testing": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "verbose": true,
    "files": [
      "__TESTS__/*.spec.js"
    ],
    "source": [
      "src/**"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
